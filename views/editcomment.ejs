<%- include("./header.ejs") %>
    <style>
        .a {
            margin-right: 100px;
            text-align: justify;
        }

        @media(max-width:768px) {
            .a {
                margin-right: 0px;
                text-align: justify;
            }
        }
    </style>

    <section class="login-wrap mtb-40">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="login-box">
                        <h1>Edit Comment</h1>
                        <form action="/updatecomment/<%=data.id%>" method="post">
                            <div class="form-group">
                                <input type="text" name="comment" class="form-control" placeholder="Comment" value="<%= data.comment %>">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-warning">Update</button>
                            </div>
                            <div class="form-group">
                                <!-- <a href="/login" class="btn btn-primary">Log In</a> -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("./footer.ejs") %>