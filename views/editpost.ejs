<%- include('./header.ejs') %>

<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>Update Post</h1>
                    <form action="/updatepost/<%=data.id%>" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" value="<%= data.title %>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="5" class="form-control" placeholder="Description" required><%= data.description %></textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3">Upload Image</label>
                            <input type="file" name="image" value="/imageupload/<%= data.image%>">
                            <img src="/imageupload/<%= data.image %>" alt="" width="75px" height="50px">
                        </div>
                        <div class="form-group">
                          <select class="form-select" name="status"  required value="<%= data.status %>">
                              <option selected >Everyone Can View</option>
                              <option>Only me</option>
                              <!-- <option value="MTECH">M.TECH</option> -->
                          </select>
                      </div>
                        <!-- <div class="mb-3 col-md-6">
                          
                      </div> -->
                        <!-- <div class="form-group">
                            <input type="password" name="status" class="form-control" placeholder="Confirm Password">
                        </div> -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">Update Post</button>
                        </div>
                        <div class="form-group">
                            <!-- <a href="/login" class="btn btn-primary">Log In</a> -->
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>


<%- include('./footer.ejs') %>